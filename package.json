{
    "name": "shebang-snippets",
    "displayName": "Shebang Snippets",
    "description": "Snippets for shebang lines for different types of scripts.",
    "version": "0.1.3",
    "publisher": "rpinski",
    "author": "Andreas Weizel",
    "repository": {
        "type": "git",
        "url": "https://github.com/Rpinski/vscode-shebang-snippets"
    },
    "icon": "images/shebang-logo.png",
    "galleryBanner": {
        "color": "#1e1e1e",
        "theme": "dark"
    },
    "categories": [
        "Snippets"
    ],
    "keywords": [
        "Snippet", "Script", "Shebang", "Comment",
        "Shell", "Bash", "Lua", "Ruby", "Python", "F#", "FSharp", "Perl", "JS", "JavaScript"
    ],
    "engines": {
        "vscode": "^1.16.0"
    },
    "contributes": {
        "snippets": [
            {
                "language": "plaintext",
                "path": "./snippets/shebang-plaintext.json"
            },
            {
                "language": "shellscript",
                "path": "./snippets/shebang-shellscript.json"
            },
            {
                "language": "perl",
                "path": "./snippets/shebang-perl.json"
            },
            {
                "language": "php",
                "path": "./snippets/shebang-php.json"
            },
            {
                "language": "lua",
                "path": "./snippets/shebang-lua.json"
            },
            {
                "language": "python",
                "path": "./snippets/shebang-python.json"
            },
            {
                "language": "javascript",
                "path": "./snippets/shebang-javascript.json"
            },
            {
                "language": "typescript",
                "path": "./snippets/shebang-javascript.json"
            },
            {
                "language": "fsharp",
                "path": "./snippets/shebang-fsharp.json"
            },
            {
                "language": "ruby",
                "path": "./snippets/shebang-ruby.json"
            },
            {
                "language": "groovy",
                "path": "./snippets/shebang-groovy.json"
            },
            {
                "language": "powershell",
                "path": "./snippets/shebang-powershell.json"
            }
        ]
    }
}