{
  "name": "shebang-snippets",
  "displayName": "Shebang Snippets",
  "description": "Snippets for shebang lines for different types of scripts.",
  "version": "1.0.0",
  "publisher": "rpinski",
  "author": "Andreas Weizel",
  "repository": {
    "type": "git",
    "url": "https://github.com/Rpinski/vscode-shebang-snippets"
  },
  "icon": "images/shebang-logo.png",
  "galleryBanner": {
    "color": "#1e1e1e",
    "theme": "dark"
  },
  "categories": [
    "Snippets"
  ],
  "keywords": [
    "Snippet",
    "Script",
    "Shebang",
    "Comment",
    "Shell",
    "Bash",
    "Lua",
    "Ruby",
    "Python",
    "F#",
    "FSharp",
    "Perl",
    "JS",
    "JavaScript"
  ],
  "engines": {
    "vscode": "^1.86.0"
  },
  "activationEvents": [
    "onStartupFinished"
  ],
  "capabilities": {
    "untrustedWorkspaces": {
      "supported": true
    }
  },
  "main": "./dist/extension.js",
  "contributes": {
    "commands": []
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "webpack --mode development",
    "watch": "webpack --watch",
    "package": "webpack --mode production --devtool hidden-source-map",
    "build:vsix": "vsce package",
    "deploy:vscode-marketplace": "vsce publish",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "20.x",
    "@types/vscode": "^1.86.0",
    "@typescript-eslint/eslint-plugin": "^8.19.1",
    "@typescript-eslint/parser": "^8.19.1",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.4.1",
    "@vscode/vsce": "^3.2.1",
    "eslint": "^8.57.0",
    "ts-loader": "^9.5.1",
    "typescript": "^5.7.3",
    "webpack": "^5.97.1",
    "webpack-cli": "^6.0.1"
  }
}
